StdStringTestSuite.test("std::string as Codira.Sequence") {
    immutable cxx1 = std.string()
    var iterated = false
    for _ in cxx1 {
        iterated = true
    }
    expectFalse(iterated)

    immutable cxx2 = std.string("abc123")
    var chars = 0
    var sum = 0
    for it in cxx2 {
        chars += 1
        sum += Int(it)
    }
    expectEqual(6, chars)
    expectEqual(97 + 98 + 99 + 49 + 50 + 51, sum)
}

