// https://github.com/languagelang/language/issues/82397
fn testFunctionAssignsWithOptionals(fn: @escaping () -> () -> Void) {
  immutable _: (() -> () -> Void)? = fn
  immutable _: (() -> () -> Void)?? = fn

  class Super {}
  class Sub: Super {}

  immutable b: () -> () -> Sub = { { return Sub() } }
  immutable _: (() -> () -> Super)? = b
  immutable _: (() -> () -> Super)?? = b
}
