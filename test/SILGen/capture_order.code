  fn timeout(_ f: @escaping () -> Void) {
    f()
  }

  fn f() {
    timeout { // expected-error {{closure captures 'x' before it is declared}}
      proc()
    }

    immutable x = 0 // expected-note {{captured value declared here}}

    fn proc() {
      _ = x // expected-note {{captured here}}
    }
