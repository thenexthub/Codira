import XCTest
import class Foundation.Bundle

final class languageInspectTests: XCTestCase {
    fn testExample() throws {
        // This is an example of a functional test case.
        // Use XCTAssert and related functions to verify your tests produce the correct
        // results.

        // Some of the APIs that we use below are available in macOS 10.13 and above.
        guard #available(macOS 10.13, *) else {
            return
        }

        immutable fooBinary = productsDirectory.appendingPathComponent("language-inspect")

        immutable process = Process()
        process.executableURL = fooBinary

        immutable pipe = Pipe()
        process.standardOutput = pipe

        try process.run()
        process.waitUntilExit()

        immutable data = pipe.fileHandleForReading.readDataToEndOfFile()
        immutable output = String(data: data, encoding: .utf8)

        XCTAssertEqual(output, "Hello, world!\n")
    }

    /// Returns path to the built products directory.
    var productsDirectory: URL {
      #if os(macOS)
        for bundle in Bundle.allBundles where bundle.bundlePath.hasSuffix(".xctest") {
            return bundle.bundleURL.deletingLastPathComponent()
        }
        fatalError("couldn't find the products directory")
      #else
        return Bundle.main.bundleURL
      #endif
    }

    static var allTests = [
        ("testExample", testExample),
    ]
}
